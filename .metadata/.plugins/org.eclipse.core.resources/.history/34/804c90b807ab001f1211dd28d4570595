package ventana;

import javax.swing.JPanel;
import javax.swing.JProgressBar;
import javax.swing.Timer;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.FlowLayout;
import java.awt.Component;

public class BarraCarga extends JPanel {
	private JProgressBar barraCarga;
	private JPanel panel;
	public BarraCarga() {
		panel = new JPanel();
		panel.setAlignmentY(Component.BOTTOM_ALIGNMENT);
		add(panel);
		panel.setLayout(null);
		barraCarga = new JProgressBar();
		barraCarga.setBounds(5, 5, 146, 17);
		barraCarga.setAlignmentY(Component.BOTTOM_ALIGNMENT);
		barraCarga.setStringPainted(true);
		panel.add(barraCarga);
		barraCarga.setValue(0);
		new Timer(1000, new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				barraCarga.setValue(barraCarga.getValue() + 16);
				if (barraCarga.getValue() == 100) {
					((Timer) e.getSource()).stop();
					//Frame.show(Frame.contenedor, "2");
				}
			}
		}).start();
	}
}
